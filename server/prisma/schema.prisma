generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id               Int            @id @default(autoincrement())
  firstName        String?
  lastName         String?
  email            String         @unique
  phone            String?        @unique
  password         String?
  provider         Provider       @default(LOCAL)
  providerId       String?        @unique
  profilePicture   String?        
  role             Role           @default(USER)
  isProfileComplete Boolean       @default(false)
  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @updatedAt
  events           Event[]
  registrations    Registration[]
  reviews          Review[]
}

model Event {
  id               Int            @id @default(autoincrement())
  title            String
  description      String
  longDescription  String
  category         String
  organizerId      Int
  date             DateTime
  startTime        DateTime
  endTime          DateTime
  venue            String
  posterUrl        String?
  price            Float          @default(0)
  prizePool        Float?
  prizeDescription String?
  capacity         Int
  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @updatedAt
  organizer        User           @relation(fields: [organizerId], references: [id])
  registrations    Registration[]
  reviews          Review[]

  @@index([organizerId], map: "Event_organizerId_fkey")
}

model Registration {
  id            Int           @id @default(autoincrement())
  userId        Int
  eventId       Int
  ticketId      String        @unique
  qrCodeUrl     String
  paymentStatus PaymentStatus @default(PENDING)
  checkedIn     Boolean       @default(false)
  createdAt     DateTime      @default(now())
  event         Event         @relation(fields: [eventId], references: [id], onDelete: Cascade)
  user          User          @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([eventId], map: "Registration_eventId_fkey")
  @@index([userId], map: "Registration_userId_fkey")
}

model Review {
  id        Int      @id @default(autoincrement())
  userId    Int
  eventId   Int
  rating    Int
  feedback  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  event     Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([eventId], map: "Review_eventId_fkey")
  @@index([userId], map: "Review_userId_fkey")
}

enum Role {
  USER
  ORGANIZER
  BOTH
}

enum PaymentStatus {
  PENDING
  COMPLETED
  FAILED
}

enum Provider {
  LOCAL
  GOOGLE
}