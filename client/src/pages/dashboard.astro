---
import Layout from "../layouts/Layout.astro";
import Footer from "../components/Footer.astro";
---

<Layout title="Dashboard - EventEase">
  <div class="flex min-h-screen bg-gray-50">
    <!-- Sidebar Navigation -->
    <aside
      class="w-[280px] bg-white border-r border-gray-200 flex flex-col fixed h-screen left-0 top-0 z-[100] lg:translate-x-0 transition-transform duration-300 -translate-x-full lg:static"
    >
      <div class="p-8 border-b border-gray-200">
        <a href="/" class="block">
          <h2
            class="text-2xl font-bold bg-gradient-to-br from-blue-500 to-blue-600 bg-clip-text text-transparent"
          >
            EventEase
          </h2>
        </a>
      </div>

      <nav class="flex-1 py-6 overflow-y-auto sidebar-nav">
        <a
          href="#overview"
          class="flex items-center gap-3 px-6 py-3.5 text-blue-600 bg-gradient-to-r from-blue-500/10 to-transparent border-l-[3px] border-blue-600 font-medium text-[15px] transition-all"
        >
          <svg
            width="20"
            height="20"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
          >
            <rect x="3" y="3" width="7" height="7"></rect>
            <rect x="14" y="3" width="7" height="7"></rect>
            <rect x="14" y="14" width="7" height="7"></rect>
            <rect x="3" y="14" width="7" height="7"></rect>
          </svg>
          Overview
        </a>

        <a
          href="#my-events"
          class="flex items-center gap-3 px-6 py-3.5 text-gray-500 transition-all font-medium text-[15px] hover:bg-gray-50 hover:text-blue-600"
        >
          <svg
            width="20"
            height="20"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
          >
            <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
            <line x1="16" y1="2" x2="16" y2="6"></line>
            <line x1="8" y1="2" x2="8" y2="6"></line>
            <line x1="3" y1="10" x2="21" y2="10"></line>
          </svg>
          My Events
        </a>

        <a
          href="#registered"
          class="flex items-center gap-3 px-6 py-3.5 text-gray-500 transition-all font-medium text-[15px] hover:bg-gray-50 hover:text-blue-600"
        >
          <svg
            width="20"
            height="20"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
          >
            <path d="M9 11l3 3L22 4"></path>
            <path d="M21 12v7a2 2 0 01-2 2H5a2 2 0 01-2-2V5a2 2 0 012-2h11"
            ></path>
          </svg>
          Registered Events
        </a>

        <a
          href="#profile"
          class="flex items-center gap-3 px-6 py-3.5 text-gray-500 transition-all font-medium text-[15px] hover:bg-gray-50 hover:text-blue-600"
        >
          <svg
            width="20"
            height="20"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
          >
            <path d="M20 21v-2a4 4 0 00-4-4H8a4 4 0 00-4 4v2"></path>
            <circle cx="12" cy="7" r="4"></circle>
          </svg>
          Profile
        </a>

        <a
          href="#settings"
          class="flex items-center gap-3 px-6 py-3.5 text-gray-500 transition-all font-medium text-[15px] hover:bg-gray-50 hover:text-blue-600"
        >
          <svg
            width="20"
            height="20"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
          >
            <circle cx="12" cy="12" r="3"></circle>
            <path
              d="M12 1v6m0 6v6m5.66-13.66l-4.24 4.24m0 6l-4.24 4.24m13.66-5.66l-6 0m-6 0l-6 0m13.66 5.66l-4.24-4.24m0-6l-4.24-4.24"
            ></path>
          </svg>
          Settings
        </a>
      </nav>

      <div class="p-6 border-t border-gray-200">
        <button
          id="logoutBtn"
          class="flex items-center gap-3 w-full px-4 py-3.5 bg-transparent text-red-500 font-medium transition-all rounded-lg hover:bg-red-50"
        >
          <svg
            width="20"
            height="20"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
          >
            <path d="M9 21H5a2 2 0 01-2-2V5a2 2 0 012-2h4"></path>
            <polyline points="16 17 21 12 16 7"></polyline>
            <line x1="21" y1="12" x2="9" y2="12"></line>
          </svg>
          Logout
        </button>
      </div>
    </aside>

    <!-- Main Content -->
    <main class="flex-1 p-8 lg:ml-0 ml-0 transition-all duration-300">
      <!-- Header -->
      <header
        class="flex justify-between items-center mb-8 pb-6 border-b border-gray-200 flex-wrap gap-4"
      >
        <div>
          <h1 class="text-3xl font-bold mb-1 text-gray-800">Dashboard</h1>
          <p class="text-gray-500 text-[15px]">
            Welcome back! Here's your event overview
          </p>
        </div>
        <div class="flex items-center gap-6">
          <button
            class="relative p-2 bg-white border border-gray-200 rounded-lg text-gray-800 transition-all hover:bg-gray-50"
          >
            <svg
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
            >
              <path d="M18 8A6 6 0 006 8c0 7-3 9-3 9h18s-3-2-3-9"></path>
              <path d="M13.73 21a2 2 0 01-3.46 0"></path>
            </svg>
            <span
              class="absolute -top-1 -right-1 bg-red-500 text-white text-[10px] font-bold px-1.5 py-0.5 rounded-full min-w-[18px] text-center"
              >3</span
            >
          </button>

          <div
            class="flex items-center gap-3 px-4 py-2 bg-white border border-gray-200 rounded-full cursor-pointer transition-all hover:shadow-md"
          >
            <img
              src="/api/placeholder/40/40"
              alt="User"
              class="w-10 h-10 rounded-full object-cover"
            />
            <div class="flex flex-col hidden sm:flex">
              <span
                class="font-semibold text-[15px] text-gray-800"
                id="userName">Loading...</span
              >
              <span class="text-[13px] text-gray-500" id="userRole">User</span>
            </div>
          </div>
        </div>
      </header>

      <!-- Stats Cards -->
      <section id="overview" class="mb-8">
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
          <div
            class="bg-white p-6 rounded-xl border border-gray-200 flex items-center gap-4 transition-all duration-300 hover:-translate-y-1 hover:shadow-lg"
          >
            <div
              class="w-14 h-14 rounded-xl flex items-center justify-center shrink-0 text-white bg-gradient-to-br from-blue-500 to-blue-600"
            >
              <svg
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
              >
                <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                <line x1="16" y1="2" x2="16" y2="6"></line>
                <line x1="8" y1="2" x2="8" y2="6"></line>
                <line x1="3" y1="10" x2="21" y2="10"></line>
              </svg>
            </div>
            <div>
              <h3
                class="text-3xl font-extrabold mb-1 text-gray-800"
                id="totalEvents"
              >
                0
              </h3>
              <p class="text-gray-500 text-sm">Total Events Created</p>
            </div>
          </div>

          <div
            class="bg-white p-6 rounded-xl border border-gray-200 flex items-center gap-4 transition-all duration-300 hover:-translate-y-1 hover:shadow-lg"
          >
            <div
              class="w-14 h-14 rounded-xl flex items-center justify-center shrink-0 text-white bg-gradient-to-br from-emerald-500 to-emerald-600"
            >
              <svg
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
              >
                <path d="M9 11l3 3L22 4"></path>
                <path d="M21 12v7a2 2 0 01-2 2H5a2 2 0 01-2-2V5a2 2 0 012-2h11"
                ></path>
              </svg>
            </div>
            <div>
              <h3
                class="text-3xl font-extrabold mb-1 text-gray-800"
                id="registeredEvents"
              >
                0
              </h3>
              <p class="text-gray-500 text-sm">Registered Events</p>
            </div>
          </div>

          <div
            class="bg-white p-6 rounded-xl border border-gray-200 flex items-center gap-4 transition-all duration-300 hover:-translate-y-1 hover:shadow-lg"
          >
            <div
              class="w-14 h-14 rounded-xl flex items-center justify-center shrink-0 text-white bg-gradient-to-br from-violet-500 to-violet-600"
            >
              <svg
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
              >
                <path d="M17 21v-2a4 4 0 00-4-4H5a4 4 0 00-4 4v2"></path>
                <circle cx="9" cy="7" r="4"></circle>
                <path d="M23 21v-2a4 4 0 00-3-3.87"></path>
                <path d="M16 3.13a4 4 0 010 7.75"></path>
              </svg>
            </div>
            <div>
              <h3
                class="text-3xl font-extrabold mb-1 text-gray-800"
                id="totalAttendees"
              >
                0
              </h3>
              <p class="text-gray-500 text-sm">Total Attendees</p>
            </div>
          </div>

          <div
            class="bg-white p-6 rounded-xl border border-gray-200 flex items-center gap-4 transition-all duration-300 hover:-translate-y-1 hover:shadow-lg"
          >
            <div
              class="w-14 h-14 rounded-xl flex items-center justify-center shrink-0 text-white bg-gradient-to-br from-amber-500 to-amber-600"
            >
              <svg
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
              >
                <polygon
                  points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"
                ></polygon>
              </svg>
            </div>
            <div>
              <h3 class="text-3xl font-extrabold mb-1 text-gray-800">4.8</h3>
              <p class="text-gray-500 text-sm">Average Rating</p>
            </div>
          </div>
        </div>
      </section>

      <!-- Quick Actions -->
      <section class="mb-8">
        <h2 class="text-2xl font-bold mb-6 text-gray-800">Quick Actions</h2>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
          <button
            class="bg-white p-6 rounded-xl border-2 border-dashed border-gray-200 text-center transition-all duration-300 cursor-pointer hover:border-blue-500 hover:bg-blue-50/50 hover:-translate-y-0.5 group"
            onclick="window.location.href='/create-event'"
          >
            <svg
              width="32"
              height="32"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              class="mx-auto mb-4 stroke-blue-500 stroke-2 group-hover:scale-110 transition-transform"
            >
              <line x1="12" y1="5" x2="12" y2="19"></line>
              <line x1="5" y1="12" x2="19" y2="12"></line>
            </svg>
            <h3 class="text-base font-bold mb-2 text-gray-800">Create Event</h3>
            <p class="text-sm text-gray-500">Start organizing a new event</p>
          </button>

          <button
            class="bg-white p-6 rounded-xl border-2 border-dashed border-gray-200 text-center transition-all duration-300 cursor-pointer hover:border-blue-500 hover:bg-blue-50/50 hover:-translate-y-0.5 group"
            onclick="window.location.href='/events'"
          >
            <svg
              width="32"
              height="32"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              class="mx-auto mb-4 stroke-blue-500 stroke-2 group-hover:scale-110 transition-transform"
            >
              <circle cx="11" cy="11" r="8"></circle>
              <path d="M21 21l-4.35-4.35"></path>
            </svg>
            <h3 class="text-base font-bold mb-2 text-gray-800">
              Browse Events
            </h3>
            <p class="text-sm text-gray-500">Discover upcoming events</p>
          </button>

          <button
            class="bg-white p-6 rounded-xl border-2 border-dashed border-gray-200 text-center transition-all duration-300 cursor-pointer hover:border-blue-500 hover:bg-blue-50/50 hover:-translate-y-0.5 group"
          >
            <svg
              width="32"
              height="32"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              class="mx-auto mb-4 stroke-blue-500 stroke-2 group-hover:scale-110 transition-transform"
            >
              <path d="M14 2H6a2 2 0 00-2 2v16a2 2 0 002 2h12a2 2 0 002-2V8z"
              ></path>
              <polyline points="14 2 14 8 20 8"></polyline>
            </svg>
            <h3 class="text-base font-bold mb-2 text-gray-800">View Reports</h3>
            <p class="text-sm text-gray-500">Check event analytics</p>
          </button>

          <button
            class="bg-white p-6 rounded-xl border-2 border-dashed border-gray-200 text-center transition-all duration-300 cursor-pointer hover:border-blue-500 hover:bg-blue-50/50 hover:-translate-y-0.5 group"
          >
            <svg
              width="32"
              height="32"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              class="mx-auto mb-4 stroke-blue-500 stroke-2 group-hover:scale-110 transition-transform"
            >
              <path d="M21 15a2 2 0 01-2 2H7l-4 4V5a2 2 0 012-2h14a2 2 0 012 2z"
              ></path>
            </svg>
            <h3 class="text-base font-bold mb-2 text-gray-800">Messages</h3>
            <p class="text-sm text-gray-500">Check your messages</p>
          </button>
        </div>
      </section>

      <!-- Recent Events -->
      <section id="my-events" class="mb-8">
        <div class="flex justify-between items-center mb-6">
          <h2 class="text-2xl font-bold text-gray-800">My Recent Events</h2>
          <a
            href="/events"
            class="text-blue-600 font-semibold text-[15px] transition-all hover:text-blue-700"
            >View All →</a
          >
        </div>

        <div
          id="eventsContainer"
          class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6"
        >
          <!-- Events will be loaded here -->
          <div class="col-span-full text-center p-12 text-gray-500">
            Loading events...
          </div>
        </div>
      </section>

      <!-- Registered Events -->
      <section id="registered" class="mb-8">
        <div class="flex justify-between items-center mb-6">
          <h2 class="text-2xl font-bold text-gray-800">
            Upcoming Registered Events
          </h2>
          <a
            href="/my-registrations"
            class="text-blue-600 font-semibold text-[15px] transition-all hover:text-blue-700"
            >View All →</a
          >
        </div>

        <div
          id="registrationsContainer"
          class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6"
        >
          <!-- Registrations will be loaded here -->
          <div class="col-span-full text-center p-12 text-gray-500">
            Loading registrations...
          </div>
        </div>
      </section>
    </main>
  </div>
</Layout>

<style>
  /* Custom scrollbar for sidebar */
  .sidebar-nav::-webkit-scrollbar {
    width: 4px;
  }
  .sidebar-nav::-webkit-scrollbar-track {
    background: transparent;
  }
  .sidebar-nav::-webkit-scrollbar-thumb {
    background: #e5e7eb;
    border-radius: 4px;
  }
  .sidebar-nav:hover::-webkit-scrollbar-thumb {
    background: #d1d5db;
  }
</style>

<script>
  // Fetch user data
  async function fetchUserData() {
    try {
      const response = await fetch("http://localhost:3000/api/user/me", {
        credentials: "include",
      });

      if (response.ok) {
        const data = await response.json();
        if (data.success) {
          const userNameEl = document.getElementById("userName");
          const userRoleEl = document.getElementById("userRole");

          if (userNameEl)
            userNameEl.textContent = `${data.data.firstName} ${data.data.lastName}`;
          if (userRoleEl) userRoleEl.textContent = data.data.role;
        }
      } else {
        // Redirect to login if not authenticated
        window.location.href = "/login";
      }
    } catch (error) {
      console.error("Error fetching user data:", error);
    }
  }

  // Logout functionality
  document.getElementById("logoutBtn")?.addEventListener("click", async () => {
    try {
      const response = await fetch("http://localhost:3000/api/auth/logout", {
        method: "POST",
        credentials: "include",
      });

      if (response.ok) {
        window.location.href = "/login";
      }
    } catch (error) {
      console.error("Error logging out:", error);
    }
  });

  // Load user data on page load
  fetchUserData();

  // Smooth scrolling for navigation
  document.querySelectorAll(".nav-item").forEach((item) => {
    item.addEventListener("click", (e) => {
      const href = item.getAttribute("href");
      if (href && href.startsWith("#")) {
        e.preventDefault();
        const target = document.querySelector(href);
        if (target) {
          target.scrollIntoView({ behavior: "smooth" });
        }

        // Update active state
        document
          .querySelectorAll(".nav-item")
          .forEach((nav) => nav.classList.remove("active"));
        item.classList.add("active");
      }
    });
  });
</script>
