<form id="createEventForm" class="space-y-6">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div class="col-span-2">
            <label
                class="block text-sm font-black text-gray-900 mb-2 uppercase tracking-wide"
                >Event Title</label
            >
            <input
                type="text"
                name="title"
                required
                class="input input-bordered w-full border-2 border-black focus:outline-none focus:ring-0 focus:border-blue-600 font-bold"
                placeholder="e.g. Tech Conference 2025"
            />
        </div>

        <div>
            <label
                class="block text-sm font-black text-gray-900 mb-2 uppercase tracking-wide"
                >Category</label
            >
            <select
                name="category"
                class="select select-bordered w-full border-2 border-black focus:outline-none focus:ring-0 focus:border-blue-600 font-bold"
            >
                <option disabled selected>Select Category</option>
                <option>Technology</option>
                <option>Cultural</option>
                <option>Sports</option>
                <option>Academic</option>
                <option>Workshop</option>
                <option>Other</option>
            </select>
        </div>

        <div>
            <label
                class="block text-sm font-black text-gray-900 mb-2 uppercase tracking-wide"
                >Venue</label
            >
            <input
                type="text"
                name="venue"
                required
                class="input input-bordered w-full border-2 border-black focus:outline-none focus:ring-0 focus:border-blue-600 font-bold"
                placeholder="e.g. Main Auditorium"
            />
        </div>

        <div class="col-span-2">
            <label
                class="block text-sm font-black text-gray-900 mb-2 uppercase tracking-wide"
                >Short Description</label
            >
            <textarea
                name="description"
                required
                class="textarea textarea-bordered w-full border-2 border-black focus:outline-none focus:ring-0 focus:border-blue-600 font-bold"
                placeholder="Brief summary of the event"
                rows="2"></textarea>
        </div>

        <div class="col-span-2">
            <label
                class="block text-sm font-black text-gray-900 mb-2 uppercase tracking-wide"
                >Long Description</label
            >
            <textarea
                name="longDescription"
                required
                class="textarea textarea-bordered w-full border-2 border-black focus:outline-none focus:ring-0 focus:border-blue-600 font-bold"
                placeholder="Detailed information about the event..."
                rows="4"></textarea>
        </div>

        <div>
            <label
                class="block text-sm font-black text-gray-900 mb-2 uppercase tracking-wide"
                >Date</label
            >
            <input
                type="date"
                name="date"
                required
                class="input input-bordered w-full border-2 border-black focus:outline-none focus:ring-0 focus:border-blue-600 font-bold"
            />
        </div>

        <div class="grid grid-cols-2 gap-4">
            <div>
                <label
                    class="block text-sm font-black text-gray-900 mb-2 uppercase tracking-wide"
                    >Start Time</label
                >
                <input
                    type="time"
                    name="startTime"
                    required
                    class="input input-bordered w-full border-2 border-black focus:outline-none focus:ring-0 focus:border-blue-600 font-bold"
                />
            </div>
            <div>
                <label
                    class="block text-sm font-black text-gray-900 mb-2 uppercase tracking-wide"
                    >End Time</label
                >
                <input
                    type="time"
                    name="endTime"
                    required
                    class="input input-bordered w-full border-2 border-black focus:outline-none focus:ring-0 focus:border-blue-600 font-bold"
                />
            </div>
        </div>

        <div>
            <label
                class="block text-sm font-black text-gray-900 mb-2 uppercase tracking-wide"
                >Poster URL</label
            >
            <input
                type="url"
                name="posterUrl"
                class="input input-bordered w-full border-2 border-black focus:outline-none focus:ring-0 focus:border-blue-600 font-bold"
                placeholder="https://example.com/image.jpg"
            />
        </div>

        <div>
            <label
                class="block text-sm font-black text-gray-900 mb-2 uppercase tracking-wide"
                >Capacity</label
            >
            <input
                type="number"
                name="capacity"
                required
                min="1"
                class="input input-bordered w-full border-2 border-black focus:outline-none focus:ring-0 focus:border-blue-600 font-bold"
            />
        </div>

        <div>
            <label
                class="block text-sm font-black text-gray-900 mb-2 uppercase tracking-wide"
                >Ticket Price ($)</label
            >
            <input
                type="number"
                name="price"
                required
                min="0"
                step="0.01"
                class="input input-bordered w-full border-2 border-black focus:outline-none focus:ring-0 focus:border-blue-600 font-bold"
                value="0"
            />
        </div>

        <div>
            <label
                class="block text-sm font-black text-gray-900 mb-2 uppercase tracking-wide"
                >Prize Pool ($) (Optional)</label
            >
            <input
                type="number"
                name="prizePool"
                min="0"
                step="0.01"
                class="input input-bordered w-full border-2 border-black focus:outline-none focus:ring-0 focus:border-blue-600 font-bold"
            />
        </div>

        <div class="col-span-2">
            <label
                class="block text-sm font-black text-gray-900 mb-2 uppercase tracking-wide"
                >Prize Description (Optional)</label
            >
            <textarea
                name="prizeDescription"
                class="textarea textarea-bordered w-full border-2 border-black focus:outline-none focus:ring-0 focus:border-blue-600 font-bold"
                placeholder="Details about prizes..."
                rows="2"></textarea>
        </div>
    </div>

    <div class="flex justify-end gap-4 pt-4 border-t border-gray-100">
        <button
            type="button"
            id="cancelCreate"
            class="btn btn-ghost hover:bg-gray-100 font-bold"
        >
            Cancel
        </button>
        <button
            type="submit"
            class="btn btn-primary bg-blue-600 hover:bg-blue-700 border-2 border-black text-white font-black shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] hover:translate-y-px hover:shadow-[2px_2px_0px_0px_rgba(0,0,0,1)] transition-all uppercase"
        >
            Create Event
        </button>
    </div>
</form>
