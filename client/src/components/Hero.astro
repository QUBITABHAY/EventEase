---
import HeroFeaturedEvents from "./HeroFeaturedEvents.astro";
---

<section
    class="relative min-h-screen flex items-center overflow-hidden bg-gradient-to-br from-blue-600 via-blue-800 to-black"
>
    <div class="absolute inset-0 overflow-hidden">
        <div
            class="absolute inset-0 bg-[linear-gradient(rgba(255,255,255,0.15)_1px,transparent_1px),linear-gradient(90deg,rgba(255,255,255,0.15)_1px,transparent_1px)] bg-[size:50px_50px] opacity-70"
        >
        </div>

        <div
            class="absolute top-[-150px] left-[-150px] w-[500px] h-[500px] bg-[radial-gradient(circle,rgba(240,147,251,0.6),transparent_70%)] blur-[100px] opacity-40 animate-float"
        >
        </div>
        <div
            class="absolute bottom-[-200px] right-[-200px] w-[600px] h-[600px] bg-[radial-gradient(circle,rgba(157,227,255,0.5),transparent_70%)] blur-[100px] opacity-40 animate-float-delayed-7"
        >
        </div>
        <div
            class="absolute top-[40%] left-[60%] w-[400px] h-[400px] bg-[radial-gradient(circle,rgba(217,255,0,0.3),transparent_70%)] blur-[100px] opacity-40 animate-float-delayed-14"
        >
        </div>
    </div>

    <div class="container mx-auto px-4 py-16 md:py-20">
        <div
            class="relative z-10 text-center max-w-4xl mx-auto animate-fade-in-up"
        >
            <h1
                class="font-serif text-5xl md:text-7xl font-extrabold text-white mb-6 leading-tight tracking-tight drop-shadow-lg"
            >
                Let's Make Your Events
                <span
                    class="block mt-2 text-orange-400 animate-gradient-shift bg-[length:200%_200%]"
                >
                    Unforgettable
                </span>
            </h1>

            <p
                class="text-xl md:text-2xl text-white/90 leading-relaxed max-w-3xl mx-auto"
            >
                We believe every event has a story to tell. Whether it's a small
                gathering or a large conference, EventEase helps you create
                meaningful experiences that your attendees will love and
                remember.
            </p>
        </div>
    </div>
</section>
