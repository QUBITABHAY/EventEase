---
import HeroFeaturedEvents from "./HeroFeaturedEvents.astro";
---

<section class="hero">
  <div class="container">
    <div class="hero-content">
      <h1 class="hero-title">
        Connect, Learn, and Grow at
        <span class="gradient-text">EventEase</span>
      </h1>

      <p class="hero-description">
        Your all in one platform for discovering and organizing Tech Events.
      </p>

      <div class="hero-actions">
        <a href="/register" class="btn btn-primary btn-large">
          Get Started
          <svg
            width="20"
            height="20"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
          >
            <path d="M5 12h14M12 5l7 7-7 7"></path>
          </svg>
        </a>
        <a href="#features" class="btn btn-secondary btn-large">
          Learn More
          <svg
            width="20"
            height="20"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
          >
            <circle cx="12" cy="12" r="10"></circle>
            <path d="M12 16v-4M12 8h.01"></path>
          </svg>
        </a>
      </div>

      <HeroFeaturedEvents />

      <div class="explore-events">
        <a href="/exploreEvents" class="btn btn-explore btn-large">
          Explore Events
          <svg
            width="20"
            height="20"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
          >
            <path d="M5 12h14M12 5l7 7-7 7"></path>
          </svg>
        </a>
      </div>
    </div>
  </div>
</section>

<style>
  .hero {
    --nav-height: 72px;
    padding-top: var(--nav-height);
    text-align: center;
    color: #fff;
    background: url("/banner5.png") no-repeat center center;
    background-size: cover;
    background-attachment: fixed;
    position: relative;
    width: 100%;
    min-height: calc(100vh - var(--nav-height));
    scroll-margin-top: var(--nav-height);
  }
  .hero::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
    z-index: 1;
  }

  .hero .container {
    position: relative;
    z-index: 2;
    max-width: 1200px;
    margin: 0 auto;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }

  .hero .hero-title {
    font-size: 48px;
    margin-bottom: 20px;
  }

  .hero .gradient-text {
    background: linear-gradient(135deg, #6a11cb, #2575fc);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .hero .hero-description {
    font-size: 18px;
    margin-bottom: 30px;
    color: #f3f3f3;
  }

  .hero .hero-actions {
    display: flex;
    justify-content: center;
    gap: 20px;
    margin-bottom: 40px;
  }

  .hero .btn {
    display: inline-flex;
    align-items: center;
    padding: 12px 20px;
    font-size: 16px;
    font-weight: bold;
    border-radius: 8px;
    text-decoration: none;
    transition:
      background 0.3s,
      transform 0.3s;
  }

  .hero .btn-primary {
    background: #6a11cb;
    color: #fff;
  }

  .hero .btn-primary:hover {
    background: #2575fc;
    transform: translateY(-2px);
  }

  .hero .btn-secondary {
    background: #f3f4f6;
    color: #333;
  }

  .hero .btn-secondary:hover {
    background: #e2e8f0;
    transform: translateY(-2px);
  }

  .hero .explore-events {
    margin-top: 20px;
  }

  .hero .btn-explore {
    background: rgb(52, 110, 211);
    color: #fff;
    display: inline-flex;
    align-items: center;
    margin-bottom: 2rem;
    gap: 8px;
    padding: 12px 24px;
    font-size: 16px;
    font-weight: bold;
    border-radius: 8px;
    text-decoration: none;
    transition:
      background 0.3s,
      transform 0.3s;
  }

  .hero .btn-explore:hover {
    background: rgb(5, 85, 150);
    transform: translateY(-2px);
  }

  .hero .hero-scroll {
    display: inline-flex;
    position: absolute;
    bottom: 4rem;
    left: 50%;
    transform: translateX(-50%);
    align-items: center;
    gap: 0.5rem;
    color: rgba(255, 255, 255, 0.7);
    font-size: 0.875rem;
    font-weight: 500;
    animation: bounce 2s infinite;
    cursor: pointer;
    transition: color 0.3s ease;
  }

  @keyframes bounce {
    0%,
    20%,
    50%,
    80%,
    100% {
      transform: translate(-50%, 0);
    }
    40% {
      transform: translate(-50%, -10px);
    }
    60% {
      transform: translate(-50%, -5px);
    }
  }
  .hero .hero-scroll:hover {
    color: white;
  }

  .hero .hero-title {
    margin-top: -2.5rem;
    font-size: 48px;
    color: #f0f9ff;
  }

  .hero .hero-description {
    color: #dbeafe;
  }
</style>
