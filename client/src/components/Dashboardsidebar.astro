---
const currentPath = Astro.url.pathname;
---

<sidebar>
    <div class="sidebar">
        <div class="sidebar-header">
            <h1>EventEase</h1>
        </div>
        <div class="sidebar-links">
            <a
                href="/dashboard"
                class={currentPath === "/dashboard" ? "active" : ""}
                >Dashboard</a
            >
            <a
                href="/dashboard/events"
                class={currentPath === "/dashboard/events" ? "active" : ""}
                >Events</a
            >
            <a
                href="/dashboard/profile"
                class={currentPath === "/dashboard/profile" ? "active" : ""}
                >Profile</a
            >
        </div>
    </div>
</sidebar>

<style>
    .sidebar {
        position: fixed;
        top: 0;
        left: 0;
        width: 200px;
        height: 100%;
        border: #000000 1px solid;
    }
    .sidebar-header {
        background-color: #ffffff;
        color: #000000;
        padding: 20px;
    }
    .sidebar-links {
        list-style: none;
        padding: 0;
        margin: 0;
        border: black 1px solid;
    }
    .sidebar-links a {
        display: block;
        padding: 10px;
        color: #000000;
        text-decoration: none;
    }
    .sidebar-links a:hover {
        background-color: #def2f6;
    }
    .sidebar-links a.active {
        background-color: #ffffff;
        color: #000000;
    }
</style>
