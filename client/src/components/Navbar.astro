---
const currentPath = Astro.url.pathname;
---

<nav
    class="sticky top-0 z-50 w-full bg-white shadow-[0_4px_15px_rgba(0,0,0,0.06)] py-2"
>
    <div class="navbar container mx-auto px-4 min-h-0">
        <div class="navbar-start w-auto lg:w-1/2">
            <div class="dropdown lg:hidden">
                <label
                    tabindex="0"
                    class="btn btn-ghost btn-circle w-11 h-11 text-[22px] font-bold hover:bg-gray-100 transition-colors duration-200"
                    >â˜°</label
                >
                <ul
                    tabindex="0"
                    class="menu dropdown-content fixed top-0 left-0 z-[9999] h-screen w-[80%] flex-col gap-5 bg-white p-10 shadow-[0_12px_45px_rgba(0,0,0,0.16)] animate-[slideFullscreen_0.28s_ease-out]"
                >
                    <li>
                        <a
                            href="/"
                            class={`block rounded-xl px-4 py-4 text-xl font-semibold tracking-wide text-gray-700 transition-all duration-250 hover:translate-x-2 hover:bg-blue-50 hover:text-blue-700 ${currentPath === "/" ? "bg-blue-50 text-blue-600" : ""}`}
                            >Home</a
                        >
                    </li>
                    <li>
                        <a
                            href="#features"
                            class="block rounded-xl px-4 py-4 text-xl font-semibold tracking-wide text-gray-700 transition-all duration-250 hover:translate-x-2 hover:bg-blue-50 hover:text-blue-700"
                            >Features</a>
                    </li>
                    <li>
                        <a
                            href="#faq"
                            class="block rounded-xl px-4 py-4 text-xl font-semibold tracking-wide text-gray-700 transition-all duration-250 hover:translate-x-2 hover:bg-blue-50 hover:text-blue-700"
                            >FAQ</a>
                    </li>
                    <li>
                        <a
                            href="#contact"
                            class="block rounded-xl px-4 py-4 text-xl font-semibold tracking-wide text-gray-700 transition-all duration-250 hover:translate-x-2 hover:bg-blue-50 hover:text-blue-700"
                            >Contact</a>
                    </li>
                    <li class="mt-2 border-t border-gray-200 pt-2">
                        <a
                            href="/login"
                            class="block rounded-xl px-4 py-4 text-xl font-semibold tracking-wide text-gray-700 transition-all duration-250 hover:translate-x-2 hover:bg-blue-50 hover:text-blue-700"
                            >Login</a
                        >
                    </li>
                    <li class="mt-auto">
                        <a
                            href="/register"
                            class="block w-full rounded-xl bg-blue-700 px-5 py-4 text-center text-xl font-bold text-white transition-transform duration-250 hover:-translate-y-0.5 hover:bg-blue-800"
                            >Get Started</a
                        >
                    </li>
                </ul>
            </div>
            <a
                href="/"
                class="ml-[-10px] mr-auto font-serif text-[40px] font-extrabold text-transparent bg-clip-text bg-gradient-to-br from-blue-500 to-blue-800 transition-all duration-300 hover:scale-105 hover:drop-shadow-[0_0_12px_rgba(59,130,246,0.5)]"
            >
                EventEase
            </a>
        </div>

        <div class="navbar-center hidden lg:flex">
            <ul class="menu menu-horizontal gap-10 px-1">
                <li>
                    <a
                        href="/"
                        class={`rounded-lg px-3.5 py-2 text-base font-semibold text-gray-600 transition-colors duration-250 hover:bg-blue-50 hover:text-blue-600 ${currentPath === "/" ? "bg-blue-50 text-blue-600" : ""}`}
                        >Home</a
                    >
                </li>
                <li>
                    <a
                        href="#features"
                        class="rounded-lg px-3.5 py-2 text-base font-semibold text-gray-600 transition-colors duration-250 hover:bg-blue-50 hover:text-blue-600"
                        >Features</a>
                </li>
                <li>
                    <a
                        href="#faq"
                        class="rounded-lg px-3.5 py-2 text-base font-semibold text-gray-600 transition-colors duration-250 hover:bg-blue-50 hover:text-blue-600"
                        >FAQ</a>
                </li>
                <li>
                    <a
                        href="#contact"
                        class="rounded-lg px-3.5 py-2 text-base font-semibold text-gray-600 transition-colors duration-250 hover:bg-blue-50 hover:text-blue-600"
                        >Contact</a>
                </li>
            </ul>
        </div>
        <div class="navbar-end hidden gap-4 lg:flex w-auto lg:w-1/2">
            <a
                href="/login"
                class="rounded-lg px-4 py-2 font-extrabold text-gray-700 transition-colors duration-200 hover:bg-gray-100"
                >Login</a
            >
            <a
                href="/register"
                class="mr-[-80px] rounded-lg bg-blue-600 px-4 py-2 font-semibold text-white shadow-[0_8px_32px_rgba(255,255,255,0.6),0_2px_8px_rgba(230,230,230,0.9)] transition-colors duration-200 hover:bg-blue-800"
                >Get Started</a
            >
        </div>
    </div>
</nav>
