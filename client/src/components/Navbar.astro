                <ul
                    tabindex="0"
                    class="menu menu-sm dropdown-content mt-3 z-50 p-2 shadow-lg bg-white rounded-box w-52 border border-gray-100"
                >
                    <li>
                        <a
                            href="/"
                            class={currentPath === "/"
                                ? "active font-semibold text-blue-600"
                                : "text-gray-700"}>Home</a>
                    </li>
                    <li>
                        <a href="#features" class="text-gray-700">Features</a>
                    </li>
                    <li><a href="#faq" class="text-gray-700">FAQ</a></li>
                    <li>
                        <a href="#contact" class="text-gray-700">Contact</a>
