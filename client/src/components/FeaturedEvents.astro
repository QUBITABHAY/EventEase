---
interface Props {
    title?: string;
}

const { title = "Featured Events" } = Astro.props;

const events = [
    {
        title: "Tech Summit 2024",
        description:
            "Annual tech conference focusing on innovation and trends.",
        category: "Tech Summit",
        color: "bg-teal-100",
    },
    {
        title: "AI and Machine Learning Workshop",
        description:
            "Hands-on workshop exploring the latest in AI and machine learning.",
        category: "AI",
        color: "bg-gray-800",
    },
    {
        title: "Cybersecurity in the Digital Age",
        description:
            "Seminar on cybersecurity best practices and emerging threats.",
        category: "CYBERSECURITY",
        color: "bg-blue-900",
    },
];
---

<section id="events" class="bg-gray-50 py-16">
    <div class="container mx-auto px-4">
        <h2
            class="text-4xl font-bold text-gray-800 mb-10 text-left md:text-3xl"
        >
            {title}
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {
                events.map((event) => {
                    let gradientClass =
                        "bg-gradient-to-br from-teal-500 to-teal-600";
                    if (event.color === "bg-teal-100")
                        gradientClass =
                            "bg-gradient-to-br from-teal-300 to-teal-400";
                    if (event.color === "bg-gray-800")
                        gradientClass =
                            "bg-gradient-to-br from-gray-700 to-gray-800";
                    if (event.color === "bg-blue-900")
                        gradientClass =
                            "bg-gradient-to-br from-blue-800 to-blue-900";

                    return (
                        <div class="bg-white rounded-xl overflow-hidden shadow-sm transition-all duration-300 hover:-translate-y-1 hover:shadow-lg cursor-pointer">
                            <div
                                class={`w-full h-[200px] relative flex items-center justify-center ${gradientClass}`}
                            >
                                <div class="text-white font-bold text-xl tracking-wider uppercase">
                                    {event.category}
                                </div>
                            </div>
                            <div class="p-6">
                                <h3 class="text-xl font-semibold text-gray-800 mb-3">
                                    {event.title}
                                </h3>
                                <p class="text-gray-500 leading-relaxed text-[15px]">
                                    {event.description}
                                </p>
                            </div>
                        </div>
                    );
                })
            }
        </div>
    </div>
</section>
