---
interface Props {
  title?: string;
}

const { title = "Featured Events" } = Astro.props;

const events = [
  {
    title: "Tech Summit 2024",
    description: "Annual tech conference focusing on innovation and trends.",
    category: "Tech Summit",
    color: "bg-teal-100"
  },
  {
    title: "AI and Machine Learning Workshop",
    description: "Hands-on workshop exploring the latest in AI and machine learning.",
    category: "AI",
    color: "bg-gray-800"
  },
  {
    title: "Cybersecurity in the Digital Age",
    description: "Seminar on cybersecurity best practices and emerging threats.",
    category: "CYBERSECURITY",
    color: "bg-blue-900"
  }
];
---

<section id="events" class="featured-events section">
  <div class="container">
    <h2 class="section-title">{title}</h2>
    <div class="events-grid">
      {events.map((event) => (
        <div class="event-card">
          <div class={`event-image ${event.color}`}>
            <div class="event-category">{event.category}</div>
          </div>
          <div class="event-content">
            <h3 class="event-title">{event.title}</h3>
            <p class="event-description">{event.description}</p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .featured-events {
    background: #f9fafb;
    padding: 4rem 0;
  }

  .section-title {
    font-size: 2.5rem;
    font-weight: 700;
    color: #1f2937;
    margin-bottom: 2.5rem;
    text-align: left;
  }

  .events-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 2rem;
  }

  .event-card {
    background: white;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
    transition: all 0.3s ease;
    cursor: pointer;
  }

  .event-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
  }

  .event-image {
    width: 100%;
    height: 200px;
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, #14b8a6, #0d9488);
  }

  .event-image.bg-teal-100 {
    background: linear-gradient(135deg, #5eead4, #2dd4bf);
  }

  .event-image.bg-gray-800 {
    background: linear-gradient(135deg, #374151, #1f2937);
  }

  .event-image.bg-blue-900 {
    background: linear-gradient(135deg, #1e3a8a, #1e40af);
  }

  .event-category {
    color: white;
    font-weight: 700;
    font-size: 1.25rem;
    letter-spacing: 0.05em;
    text-transform: uppercase;
  }

  .event-content {
    padding: 1.5rem;
  }

  .event-title {
    font-size: 1.25rem;
    font-weight: 600;
    color: #1f2937;
    margin-bottom: 0.75rem;
  }

  .event-description {
    color: #6b7280;
    line-height: 1.6;
    font-size: 0.9375rem;
  }

  @media (max-width: 768px) {
    .section-title {
      font-size: 2rem;
    }

    .events-grid {
      grid-template-columns: 1fr;
    }
  }
</style>

