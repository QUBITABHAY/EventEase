<style>
  .footer {
    position: relative;
    background: #374151;
    color: #e5e7eb;
    padding: 4rem 0 2rem;
    margin-top: 6rem;
    overflow: hidden;
  }

  .footer-glow {
    position: absolute;
    top: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 100%;
    height: 1px;
    background: linear-gradient(
      90deg,
      transparent,
      rgba(59, 130, 246, 0.5),
      transparent
    );
  }

  .footer-grid-bg {
    position: absolute;
    inset: 0;
    background-image: linear-gradient(
        rgba(59, 130, 246, 0.03) 1px,
        transparent 1px
      ),
      linear-gradient(90deg, rgba(59, 130, 246, 0.03) 1px, transparent 1px);
    background-size: 50px 50px;
    opacity: 0.5;
  }

  .footer-container {
    position: relative;
    z-index: 1;
  }

  .footer-main {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 2rem 0;
    gap: 3rem;
    border-bottom: 1px solid rgba(255, 255, 255, 0.05);
    margin-bottom: 2rem;
  }

  .footer-brand {
    flex-shrink: 0;
  }

  .brand-name {
    font-family: "Playfair Display", Georgia, serif;
    font-size: 1.75rem;
    font-weight: 800;
    background: linear-gradient(135deg, #60a5fa 0%, #93c5fd 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: 0.25rem;
    letter-spacing: -0.02em;
  }

  .brand-tagline {
    font-size: 0.875rem;
    color: #94a3b8;
    font-weight: 400;
  }

  .footer-nav {
    display: flex;
    gap: 2.5rem;
    flex-wrap: wrap;
  }

  .nav-item {
    font-family: "Inter", sans-serif;
    font-size: 0.9375rem;
    font-weight: 500;
    color: #cbd5e1;
    position: relative;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .nav-item::after {
    content: "";
    position: absolute;
    bottom: -4px;
    left: 0;
    width: 0;
    height: 2px;
    background: linear-gradient(90deg, #60a5fa, #3b82f6);
    transition: width 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .nav-item:hover {
    color: #60a5fa;
  }

  .nav-item:hover::after {
    width: 100%;
  }

  .footer-social {
    display: flex;
    gap: 0.75rem;
  }

  .social-icon {
    width: 44px;
    height: 44px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.06);
    color: #94a3b8;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    overflow: hidden;
  }

  .social-icon::before {
    content: "";
    position: absolute;
    inset: 0;
    background: linear-gradient(
      135deg,
      rgba(59, 130, 246, 0.1),
      rgba(147, 197, 253, 0.1)
    );
    opacity: 0;
    transition: opacity 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .social-icon:hover {
    border-color: rgba(96, 165, 250, 0.3);
    color: #60a5fa;
    transform: translateY(-3px);
  }

  .social-icon:hover::before {
    opacity: 1;
  }

  .footer-bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 2rem;
    font-size: 0.875rem;
    gap: 2rem;
  }

  .copyright {
    color: #64748b;
    font-weight: 400;
  }

  .footer-links {
    display: flex;
    gap: 1.5rem;
    align-items: center;
  }

  .footer-links a {
    color: #94a3b8;
    font-weight: 500;
    transition: color 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .footer-links a:hover {
    color: #60a5fa;
  }

  .separator {
    color: #334155;
    user-select: none;
  }

  @media (max-width: 968px) {
    .footer {
      padding: 3rem 0 1.5rem;
      margin-top: 4rem;
    }

    .footer-main {
      flex-direction: column;
      align-items: flex-start;
      gap: 2rem;
    }

    .footer-nav {
      flex-direction: column;
      gap: 1rem;
    }

    .footer-bottom {
      flex-direction: column;
      align-items: flex-start;
      gap: 1rem;
    }
  }

  @media (max-width: 768px) {
    .footer-social {
      order: -1;
    }

    .nav-item {
      font-size: 1rem;
    }
  }
</style>
