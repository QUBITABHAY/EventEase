---
const featuredEvents = [
  {
    title: "Tech Summit 2024",
    description: "Annual tech conference focusing on innovation and trends.",
    category: "Tech Summit",
    gradient: "linear-gradient(135deg, #5eead4, #2dd4bf)"
  },
  {
    title: "AI and Machine Learning Workshop",
    description: "Hands-on workshop exploring the latest in AI and machine learning.",
    category: "AI",
    gradient: "linear-gradient(135deg, #374151, #1f2937)"
  },
  {
    title: "Cybersecurity in the Digital Age",
    description: "Seminar on cybersecurity best practices and emerging threats.",
    category: "CYBERSECURITY",
    gradient: "linear-gradient(135deg, #1e3a8a, #1e40af)"
  }
];
---

<section class="hero-events-section">
  <div class="hero-events">
    <div class="container">
      <div class="hero-events-header">
        <h2 class="hero-events-title">Featured Events</h2>
        <p class="hero-events-subtitle">Discover exciting tech events happening near you</p>
      </div>
      <div class="hero-events-grid">
        {featuredEvents.map((event) => (
          <div class="hero-event-card">
            <div class="hero-event-image" style={`background: ${event.gradient}`}>
              <div class="hero-event-overlay"></div>
              <div class="hero-event-category">{event.category}</div>
            </div>
            <div class="hero-event-content">
              <h3 class="hero-event-title">{event.title}</h3>
              <p class="hero-event-description">{event.description}</p>
              <a href="#events" class="hero-event-link">
                Learn More
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M5 12h14M12 5l7 7-7 7"/>
                </svg>
              </a>
            </div>
          </div>
        ))}
      </div>
      <div class="hero-events-action">
        <a href="#events" class="btn btn-explore btn-large">
          Explore More Events
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M5 12h14M12 5l7 7-7 7"/>
          </svg>
        </a>
      </div>
    </div>
  </div>
</section>

<style>
  .hero-events-section {
    background: linear-gradient(135deg, #0f766e 0%, #134e4a 100%);
    position: relative;
    overflow: hidden;
  }

  .hero-events-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-image: 
      linear-gradient(rgba(255, 255, 255, 0.1) 1px, transparent 1px),
      linear-gradient(90deg, rgba(255, 255, 255, 0.1) 1px, transparent 1px);
    background-size: 50px 50px;
    opacity: 0.3;
    pointer-events: none;
  }

  .hero-events {
    position: relative;
    z-index: 1;
    padding: 5rem 0;
    background: rgba(0, 0, 0, 0.25);
    backdrop-filter: blur(15px);
    border-top: 1px solid rgba(255, 255, 255, 0.1);
  }

  .hero-events-header {
    text-align: center;
    margin-bottom: 3.5rem;
  }

  .hero-events-title {
    font-size: 3rem;
    font-weight: 800;
    color: white;
    margin-bottom: 1rem;
    text-shadow: 0 4px 15px rgba(0, 0, 0, 0.4);
    letter-spacing: -0.02em;
  }

  .hero-events-subtitle {
    font-size: 1.25rem;
    color: rgba(255, 255, 255, 0.85);
    font-weight: 400;
    max-width: 600px;
    margin: 0 auto;
  }

  .hero-events-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 2.5rem;
    max-width: 1200px;
    margin: 0 auto 3rem;
  }

  .hero-event-card {
    background: white;
    border-radius: 20px;
    overflow: hidden;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3), 0 4px 10px rgba(0, 0, 0, 0.2);
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    cursor: pointer;
    border: 2px solid rgba(255, 255, 255, 0.1);
    position: relative;
  }

  .hero-event-card:hover {
    transform: translateY(-12px) scale(1.02);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.5), 0 8px 16px rgba(0, 0, 0, 0.4);
    border-color: rgba(255, 255, 255, 0.4);
  }

  .hero-event-image {
    width: 100%;
    height: 240px;
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .hero-event-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(180deg, rgba(0, 0, 0, 0.1) 0%, rgba(0, 0, 0, 0.3) 100%);
    opacity: 0;
    transition: opacity 0.4s ease;
  }

  .hero-event-card:hover .hero-event-overlay {
    opacity: 1;
  }

  .hero-event-category {
    color: white;
    font-weight: 800;
    font-size: 1.5rem;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    text-shadow: 0 4px 8px rgba(0, 0, 0, 0.4);
    position: relative;
    z-index: 2;
    transition: transform 0.4s ease;
  }

  .hero-event-card:hover .hero-event-category {
    transform: scale(1.05);
  }

  .hero-event-content {
    padding: 2rem;
    background: white;
  }

  .hero-event-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: #1f2937;
    margin-bottom: 1rem;
    line-height: 1.3;
    transition: color 0.3s ease;
  }

  .hero-event-card:hover .hero-event-title {
    color: #14b8a6;
  }

  .hero-event-description {
    color: #6b7280;
    line-height: 1.7;
    font-size: 1rem;
    margin-bottom: 1.5rem;
  }

  .hero-event-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: #14b8a6;
    font-weight: 600;
    font-size: 0.9375rem;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .hero-event-link:hover {
    color: #0d9488;
    gap: 0.75rem;
  }

  .hero-event-link svg {
    transition: transform 0.3s ease;
  }

  .hero-event-link:hover svg {
    transform: translateX(4px);
  }

  .hero-events-action {
    text-align: center;
    margin-top: 3rem;
  }

  .btn-explore {
    background: #f5f5dc;
    color: #1f2937;
    box-shadow: 0 6px 25px rgba(0, 0, 0, 0.3);
    padding: 1.125rem 2.75rem;
    font-size: 1.125rem;
    font-weight: 700;
    border-radius: 12px;
    transition: all 0.3s ease;
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    text-decoration: none;
  }

  .btn-explore:hover {
    background: #f0f0d0;
    transform: translateY(-3px);
    box-shadow: 0 8px 35px rgba(0, 0, 0, 0.4);
  }

  .btn-explore svg {
    transition: transform 0.3s ease;
  }

  .btn-explore:hover svg {
    transform: translateX(5px);
  }

  @media (max-width: 968px) {
    .hero-events-title {
      font-size: 2.5rem;
    }

    .hero-events-subtitle {
      font-size: 1.125rem;
    }

    .hero-events-grid {
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
      gap: 2rem;
    }
  }

  @media (max-width: 768px) {
    .hero-events {
      padding: 4rem 0;
    }

    .hero-events-header {
      margin-bottom: 2.5rem;
    }

    .hero-events-title {
      font-size: 2rem;
      margin-bottom: 0.75rem;
    }

    .hero-events-subtitle {
      font-size: 1rem;
    }

    .hero-events-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
      margin-bottom: 2.5rem;
    }

    .hero-event-image {
      height: 200px;
    }

    .hero-event-content {
      padding: 1.5rem;
    }

    .hero-event-title {
      font-size: 1.25rem;
    }

    .hero-events-action {
      margin-top: 2rem;
    }

    .btn-explore {
      width: 100%;
      max-width: 300px;
    }
  }
</style>

