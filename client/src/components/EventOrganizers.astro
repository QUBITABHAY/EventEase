---
const organizers = [
    {
        name: "Ethan Carter",
        role: "Tech Event Specialist",
        initial: "E",
    },
    {
        name: "Sophia Bennett",
        role: "AI Conference Organizer",
        initial: "S",
    },
    {
        name: "Liam Harper",
        role: "Cybersecurity Event Planner",
        initial: "L",
    },
];
---

<section class="bg-white py-16">
    <div class="container mx-auto px-4">
        <h2
            class="text-4xl font-bold text-gray-800 mb-10 text-left md:text-3xl"
        >
            Featured Event Organizers
        </h2>
        <div
            class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-8 max-w-[900px] mx-auto"
        >
            {
                organizers.map((organizer) => (
                    <div class="flex flex-col items-center gap-4 text-center group">
                        <div class="w-[120px] h-[120px] rounded-full bg-[#f5f5dc] flex items-center justify-center shadow-sm transition-all duration-300 group-hover:scale-105 group-hover:shadow-md">
                            <span class="text-5xl font-bold text-gray-800 font-sans">
                                {organizer.initial}
                            </span>
                        </div>
                        <h3 class="text-lg font-semibold text-gray-800 m-0">
                            {organizer.name}
                        </h3>
                        <p class="text-sm text-gray-500 m-0">
                            {organizer.role}
                        </p>
                    </div>
                ))
            }
        </div>
    </div>
</section>
